
<div class="card" style="width: 18rem;">
  <div class="card-body"> 
    <p>
      <%= @friend.first_name.capitalize() %>
      <%= @friend.last_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @friend.email %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @friend.phone %>
    </p>

    <p>
      <strong>Twitter:</strong>
      <%= @friend.twitter %>
    </p>

    <%= link_to 'Edit', edit_friend_path(@friend),  class:"btn btn-secondary" %>
    <%= link_to 'Back', friends_path,  class:"btn btn-secondary" %>
  </div>
</div>
